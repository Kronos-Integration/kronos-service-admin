{
  "name": "admin",
  "description": "flow administration",
  "type": "kronos-flow",
  "autostart": true,
  "steps": {
    "http": {
      "type": "kronos-http-routing",
      "listener": "admin",
      "endpoints": {
        "a": {
          "path": "/flow",
          "method": "POST",
          "target": "control/in"
        },
        "b": {
          "path": "/flow/:id/start",
          "method": "POST",
          "target": "control/command",
          "content": {
            "flow": "${id}",
            "action": "start"
          }
        },
        "c": {
          "path": "/flow/:id/stop",
          "method": "POST",
          "target": "control/command",
          "content": {
            "flow": "${id}",
            "action": "stop"
          }
        },
        "d": {
          "path": "/flow/:id",
          "method": "DELETE",
          "target": "control/command",
          "content": {
            "flow": "${id}",
            "action": "delete"
          }
        },
        "e": {
          "path": "/flow/:id",
          "method": "GET",
          "target": "control/command",
          "content": {
            "flow": "${id}",
            "action": "get"
          }
        }
      }
    },
    "control": {
      "type": "kronos-flow-control"
    }
  }
}
